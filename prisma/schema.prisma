// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  password  String
  role      Role      @default(CLIENT)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  bookings  Booking[]
  lastLogin DateTime? // Ajout pour l'événement signIn
}

enum Role {
  ADMIN
  CLIENT
}

model Course {
  id          String    @id @default(cuid())
  title       String
  description String
  price       Decimal   @db.Decimal(10, 2)
  duration    Int       // in minutes
  level       Level
  capacity    Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  bookings    Booking[]
}

enum Level {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  ALL_LEVELS
}

model Booking {
  id                    String   @id @default(cuid())
  userId                String
  courseId              String
  date                  DateTime
  status                Status   @default(PENDING)
  
  // ====================================================================
  // == CORRECTION APPLIQUÉE ICI : Ajout des champs de paiement ==
  // ====================================================================
  stripePaymentIntentId String?  @unique
  paymentStatus         String?
  amount                Decimal? @db.Decimal(10, 2)
  currency              String?

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  user                  User     @relation(fields: [userId], references: [id])
  course                Course   @relation(fields: [courseId], references: [id])

  @@index([courseId, date])
  @@index([userId, date])
}

enum Status {
  PENDING
  CONFIRMED
  CANCELLED
}

model ContentBlock {
  id        String   @id @default(cuid())
  key       String   @unique
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
